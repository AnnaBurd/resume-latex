% repeatable text styles
\newcommand{\stylestrong}[1]{
    \textbf{\textcolor{color-text}{#1}}
}

\newcommand{\styleitalic}[1]{
    \textcolor{color-text}{\textit{#1}}
}

\newcommand{\styleemphasis}[1]{
    {\textcolor{color-text-light}{#1}}
}

\newcommand{\styleemphasisitalic}[1]{
    \textit{\textcolor{color-text-light}{#1}}
}

% repeatable table layout
\newcommand{\tablelayout}[4]{
    \fontsize{11pt}{11pt}\selectfont
    \begin{tabularx}{\textwidth}{@{}Xr@{}}
        \stylestrong{#1} & \styleitalic{#2}\\
        \styleemphasis{#3} & \styleemphasisitalic{#4}\\
    \end{tabularx}
}

% repeatable table layout with merged columns
\renewcommand\cellalign{cl}
\newcommand{\tablelayoutmerged}[3]{
    \fontsize{11pt}{11pt}\selectfont
    \begin{tabularx}{\textwidth}{@{}Xr@{}}
        \stylestrong{#1} & \styleitalic{#2}\\
        \multicolumn{2}{@{}l}{\styleemphasis{\makecell{#3}}}\\
    \end{tabularx}
}


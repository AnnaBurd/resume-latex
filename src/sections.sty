% table layout - one column and three rows (fits in two-column page layout)
\newcommand{\tablelayoutsingle}[3]{
    \fontsize{11pt}{11pt}\selectfont
    \begin{tabularx}{\textwidth}{@{}Xr@{}}
        \stylestrong{#1} \\
        \styleemphasis{#2} \\
        \styleemphasisitalic{#3} \\
    \end{tabularx}
}

% two column layout
\newcommand{\twocolumnlayout}[2]{
    \vspace*{-0.6cm}
    \setlength{\columnsep}{2cm}
    \begin{multicols}{2}

    #1

    \columnbreak

    #2

    \end{multicols}
}

% resume section box with title and separator line
\newenvironment{resumesection}[1]{
    {\vspace*{0.1cm}\color{color-accent}\subheaderFontFamily\fontsize{11pt}{11pt}\selectfont #1}
    {\color{color-ruler}\hrulefill

    \vspace*{0.1cm}
    }
}{}

% lines between resume sections
\renewcommand{\hrulefill}
	{\leavevmode\leaders\hrule height 0.6pt\hfill\kern 1pt} 

% list of skills
\newcommand{\skillslist}[3]{
    \vspace*{-0.3em}
	\begin{center}
        \fontsize{11pt}{11pt}\selectfont
          \stylestrong{#1}
        
        \fontsize{8pt}{8pt}\selectfont
          \styleemphasis{#2}
        
        \fontsize{11pt}{11pt}\selectfont #3
      \end{center}
      \vspace*{-0.6em}
}

% information about completed projects
\NewDocumentCommand\projectinfo{mmmmmmo}{
    \vspace*{0.2cm}
    \IfNoValueTF{#7}
        {\tablelayoutmerged{#1}{{\href{#3}{#2}}, {\href{#5}{#4}}}{#6}}
        {\tablelayout{#1}{{\href{#3}{#2}}, {\href{#5}{#4}}}{#6}{#7}}

}

% information about work experience / education (in 1-column layout)
\newcommand{\sectioninfo}[4]{
    \vspace*{0.2cm}
    \tablelayout{#1}{#2}{#3}{#4}
}

% information about education (in 2-column layout)
\newcommand{\educationinfo}[3]{
    \vspace*{0.2cm}
    \tablelayoutsingle{#1}{#2}{#3}
}

% bullet list of achievements
\NewDocumentCommand\bulletlist{oooooooo}{
    \vspace*{-0.7em}
    \begin{itemize}[label={\color{color-text-light}\textbullet}, itemsep=0.05em, topsep=0.2cm, labelsep=0.2cm]
        \IfNoValueTF{#1}{}{\item {#1}}
        \IfNoValueTF{#2}{}{\item {#2}}
        \IfNoValueTF{#3}{}{\item {#3}}
        \IfNoValueTF{#4}{}{\item {#4}}
        \IfNoValueTF{#5}{}{\item {#5}}
        \IfNoValueTF{#6}{}{\item {#6}}
        \IfNoValueTF{#7}{}{\item {#7}}
        \IfNoValueTF{#8}{}{\item {#8}}
    \end{itemize}
}

% profile picture (rounded)
\newcommand{\profilepicture}[1]{
    \begin{tikzpicture}[remember picture, overlay]
        \clip ([shift={(-3.45cm,-3cm)}]current page.north east) circle (1.5cm);
        \node[inner sep=0, minimum size=2cm, anchor=center, rotate=0] at ([shift={(-3.45cm,-3.6cm)}]current page.north east) (myphoto) {\includegraphics[width=4.1cm]{#1}};
    \end{tikzpicture}
}


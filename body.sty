\newcommand{\grayit}[1]{
  \textcolor{darkgray}{#1}%{\textit{#1}}
}
\newcommand{\blackit}[1]{
  \textcolor{black}{#1}%{\textit{#1}}
}

\newcommand{\tableit}[4]{
  \fontsize{10pt}{10pt}\selectfont
  \begin{tabularx}{\textwidth}{@{}Xr@{}}
    \blackit{#1} & \blackit{#2}\\
    \grayit{#3} & \grayit{#4}\\
  \end{tabularx}
}  
  
\newcommand{\university}[4]{
  \tableit{#1}{#2}{#3}{#4}
}

\NewDocumentCommand\projectinfo{mmmmmmm}{
  \tableit{\href{https://#3}{#1}}
  {{\href{https://#3}{#2}}, {\href{https://#5}{#4}}}
  {#7}
  {#6}
}

\NewDocumentCommand\experienceinfo{mmmm}{
  \tableit{#1}{#2}{#3}{#4}
}

\NewDocumentCommand\achievements{oooooo}{
